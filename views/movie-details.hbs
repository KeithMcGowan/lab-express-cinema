<div>

    <img src="{{movie.image}}" alt="">

    <h1>{{movie.title}}</h1>

    <h3>Director: {{movie.director}}</h3>

    <h4>Stars</h4>
    <ul>
        <li>{{movie.stars.[0]}}</li>
        <li>{{movie.stars.[1]}}</li>
        <li>{{movie.stars.[2]}}</li>
    </ul>

    <p>{{movie.description}}</p>

    <ul>
        <li>{{movie.showtimes.[0]}}</li>
        <li>{{movie.showtimes.[1]}}</li>
        <li>{{movie.showtimes.[2]}}</li>
    </ul>

    <a href="/">Home</a> <a href="/movies">Back</a>

</div>